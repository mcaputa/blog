@using Common.Consts
@model Web.ViewModels.MainPageViewModel

@section SeoMetaTags
    {
    <title>Maciej Caputa - z programowaniem w tle</title>
}

@section Head
    {
    <a rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css"></a>
    <a rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css"></a>
}
<div>
    <div class="slider-container-properties">
        <div class="slider-element-container-properties"></div>
        <div class="slider-element-container-properties"></div>
        <div class="slider-element-container-properties"></div>
    </div>

    <div class="row main-site-container">
        <div class="col-md-8 left-main-container">
            <div class="last-posts-container">
                <h3 class="last-posts-text-properties">
                    Ostatnie posty
                </h3>
                <div class="row last-posts-grid">
                        @for (var index = 0; index < Model.AllPostsDomainModel.PostPreviewStorageModels.Count; index++)
                        {
                            var post = Model.AllPostsDomainModel.PostPreviewStorageModels[index];
                            <article class="col-md-6 single-article-container">
                                <div class="single-article-conteiner-inner">
                                    <header class="article-header">
                                        <a asp-route="@RouteNames.GetPostRoute" asp-route-friendlyTitle="@post.FriendlyTitleUrl">
                                            <div class="article-header-image-container">
                                                <img class="article-header-img" src="https://source.unsplash.com/random/340x226/?nature,water/@post.Id" />
                                            </div>
                                            <h2 class="article-header-text">@post.Title</h2>
                                        </a>
                                        <div class="article-info-container">
                                            <div>
                                                <i class="far fa-calendar-alt"></i> <span class="ml-1">@post.CreatedOn</span>
                                            </div>
                                            <div>
                                                <i class="far fa-comment"></i>
                                                <span>8</span>
                                            </div>
                                        </div>
                                    </header>
                                    <p class="article-lead-container">@post.Preview</p>
                                    <footer class="article-footer-container">
                                        <div>
                                            <i class="fab fa-facebook-square dark-blue"></i>
                                            <i class="fab fa-twitter grey"></i>
                                            <i class="fab fa-google-plus-g dark-blue"></i>
                                        </div>
                                        <div>
                                            <a asp-route="@RouteNames.GetPostRoute" asp-route-friendlyTitle="@post.FriendlyTitleUrl"><i class="fas fa-arrow-circle-right pr-2"></i></a>
                                        </div>
                                    </footer>
                                </div>
                            </article>
                        }
                    </div>
            </div>
        </div>
        <div class="col-md-4 right-main-container">
            <div class="about-me-container">
                <div class="about-me-text">
                    Kim jestem?
                </div>
                <div class="about-me-image-container">
                    <div class="about-me-image-container-inner">
                        <img src="~/images/me.jpg" class="about-me-image" />
                    </div>
                </div>
                <div class="about-me-description">
                    <div>
                        Lorem ipsum, luroem ipsum, Lorem ipsum, Lorem ipsum, luroem ipsum, Lorem ipsumLorem ipsum, luroem ipsum, Lorem ipsumLorem ipsum, luroem ipsum, Lorem ipsumLorem ipsum, luroem ipsum
                    </div>
                </div>
            </div>
            <div class="social-media-container">
                <div class="social-media-text">Gdzie możesz mnie spotkać?</div>
                <div class="social-media-button-group">
                    <a class="facebook-color" href="https://www.facebook.com/zprogramowaniemwtle/" target="_blank"><i class="fab pr-3 fa-facebook-square"></i></a>
                    <a class="linkedin-color" href="https://www.linkedin.com/in/caputamaciej/" target="_blank"><i class="fab fa-linkedin pr-3"></i></a>
                    <a class="instagram-color" href="https://www.instagram.com/maciejcaputa/" target="_blank"><i class="fab pr-3  fa-instagram padding"></i></a>
                    <a class="github-color" href="https://github.com/mcaputa" target="_blank">
                        <i class="fab fa-github-square"></i>
                    </a>
                </div>
            </div>
            <div class="popular-posts-container">
                <div class="popular-posts-text">
                    Najpopularniejsze posty
                </div>
                @for (int i = 0; i < 3; i++)
                {
                    var post = Model.AllPostsDomainModel.PostPreviewStorageModels[i];

                    <a asp-route="@RouteNames.GetPostRoute" asp-route-friendlyTitle="@post.FriendlyTitleUrl">
                        <div class="popular-post-container">
                            <div class="popular-post-image-container">
                                <img class="popular-post-image" src="https://source.unsplash.com/random/340x150/?nature,water/@post.Id" />
                                <div class="popular-post-text">@post.Title</div>
                                <div class="popular-post-info-container">
                                    <div>
                                        <i class="far fa-calendar-alt"></i> <span class="ml-1">@post.CreatedOn</span>
                                    </div>
                                    <div>
                                        <i class="far fa-comment"></i>
                                        <span>8</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="row instagram-container">
        <div class="row col-md-12">
            <div class="col-md-8 instagram-info-container">
                <h3 class="instagram-info-properties">
                    Insta live
                </h3>
            </div>
        </div>
        <div class="row col-md-12 instagram-images-row-properties">
            <div class="col-md-12 instagram-images-container">
                @for (var index = 0; index < 5; index++)
                {
                    <div class="instagram-image-container">
                        <img class="instagram-img-properties" src="https://source.unsplash.com/random/360x160/?nature,water/@index" />
                    </div>
                }
            </div>
        </div>
        <div class="row col-md-12 instagram-social-media-row-properties">
            <div class="col-md-12 instagram-social-media-container">
                <div class="instagram-social-media-box">
                    <div class="instagram-social-media-properties">
                        <a class="text-white" href="https://www.facebook.com/zprogramowaniemwtle/" target="_blank">
                            <i class="fab fa-facebook-f pr-2"></i>
                            <span class="text-white social-media-text-properties">FACEBOOK</span>
                        </a>
                        
                    </div>
                    <div class="instagram-social-media-properties">
                        <a class="text-white" href="https://www.linkedin.com/in/caputamaciej/" target="_blank">
                            <i class="fab fa-linkedin-in pr-2"></i>
                            <span class="text-white social-media-text-properties">LINKEDIN</span>
                        </a>
                    </div>
                    <div class="instagram-social-media-properties">
                        <a class="text-white" href="https://www.instagram.com/maciejcaputa/" target="_blank">
                            <i class="fab fa-instagram padding pr-2"></i>
                            <span class="text-white social-media-text-properties">INSTAGRAM</span>
                        </a>
                        

                    </div>
                    <div class="instagram-social-media-properties">
                        <a class="text-white" href="https://github.com/mcaputa" target="_blank">
                            <i class="fab fa-github"></i>
                            <span class="text-white social-media-text-properties">GITHUB</span>
                        </a>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section JS
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
}
